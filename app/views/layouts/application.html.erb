<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2-debug</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
      <main>
        <p id="notice"><%= notice %></p>
        <% if user_signed_in? %>
          <%= form_with url: searching_path, local:true do |f| %>
            <%= f.text_field :keyword, placeholder: "キーワード検索" %>
            <%= f.select :model, options_for_select({ "User" => "User", "Book" => "Book" }) %>
            <%= f.select :search, options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"  }) %>
            <%= f.submit '検索', class: "btn btn-primary" %>
          <% end %>
        <% end %>
      </main>
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
